  <?xml version="1.0"?>
  <robot name="test_robot">
    <link name="base_link">
      <collision>
        <geometry>
          <cylinder length="0.6" radius="0.2"/>
        </geometry>
      </collision>
      <visual>
        <geometry>
          <cylinder length="0.6" radius="0.2"/>
        </geometry>
        <material name="blue">
          <color rgba="0 0 .8 1"/>
        </material>
      </visual>
    </link>

    <link name="arm">
      <collision>
        <geometry>
          <box size="0.1 .1 .4"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
      </collision>
      <visual>
        <geometry>
          <box size="0.1 .1 .4"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
        <material name="white">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <inertial>
        <origin xyz="0 0 0.7" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia
          ixx=".001" ixy="0.0" ixz="0.0"
          iyy=".001" iyz="0.0"
          izz=".001"/>
      </inertial>
    </link>

    <joint name="base_to_arm" type="revolute">
      <origin xyz="0 0 0.3"/>
      <axis xyz="0 1 0"/>
      <limit effort="20.0" lower="0.0" upper="6.2831" velocity="20"/>
      <parent link="base_link"/>
      <child link="arm"/>
      <dynamics damping="1" friction="0" />
    </joint>

    <gazebo reference="base_to_arm">
      <sensor name="arm_ft" type="force_torque">
          <force_torque>
              <frame>child</frame>
              <measure_direction>child_to_parent</measure_direction>
          </force_torque>
          <update_rate>100</update_rate>
          <always_on>1</always_on>
      </sensor>
    </gazebo>

</robot>
